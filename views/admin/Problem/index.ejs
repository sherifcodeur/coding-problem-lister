<!doctype html>
<html lang="en">
 <%- include('../partials/head') %>
</head>
  <body>
    
    <%- include('../partials/header') %>

<div class="container-fluid">
  <div class="row">
    <%- include('../partials/sidebar') %>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">


      <h2>All Problems</h2>
      <a href="/admin/problems/create" class="btn btn-primary">Create New Problem</a>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Resolved</th>
              <th scope="col">created</th>
              <th scope="col">updated</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>

            <%  problems.forEach(problem=>{ %>

              <tr>
                <td></td>
                <td><%= problem.name %></td>
                <td><%= problem.resolved %></td>
                <td><%= problem.createdAt.toDateString() %></td>
                <td><%= problem.updatedAt.toDateString() %></td>
                <td ><a href="/admin/problems/show/<%= problem.id %>" class="btn btn-info btn-sm  me-3">show</a><a href="/admin/problems/edit/<%= problem.id %>" class="btn btn-warning btn-sm me-3">edit</a><a href="/admin/problems/delete/<%= problem.id %>"class="btn btn-danger btn-sm me-3">delete</a></td>
              </tr>


           <% })%>
           
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>


<%- include('../partials/footer') %>
  </body>
</html>
